@model IEnumerable<Data.Models.Student>

@{
    ViewData["Title"] = "Home Page";


}
<div class="row">
@foreach (var item in Model)
{

    <div class="card-group">
        <div class="card">
                <div class="col-lg-3 my-3 col-md-6">
                <div class="card single-popular-carusel mx-3" style="width:100%; height:400px; box-shadow:2px 2px 2px 2px grey;">
                <div class="thumb-wrap relative">
                <div class="thumb relative">
                    <div class="overlay overlay-bg"></div>
            <img src="@Html.DisplayFor(modelItem => item.StudentImages)" class="card-img-top" alt="..." height="250">
           </div>
           </div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.StudentName)</h5>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.StudentEmail)</p>
            </div>
            <div class="card-footer">
                <a asp-controller="Home" asp-action="Department" class="text-dark btn btn-primary"> @Html.DisplayFor(modelItem => item.Department.DepartmentName)</a>

                <a asp-controller="Home" asp-action="Trainer" class="text-dark btn btn-secondary">@Html.DisplayFor(modelItem => item.Trainer.TrainerName)</a>

            </div>
        </div>
        </div>
        </div>
    </div>
}
</div>